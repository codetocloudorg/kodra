{
    "workbench.colorTheme": "One Dark Pro",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.productIconTheme": "material-product-icons",
    "editor.fontFamily": "'JetBrainsMono Nerd Font', 'Fira Code', Consolas, monospace",
    "editor.fontSize": 14,
    "editor.fontLigatures": true,
    "editor.cursorBlinking": "smooth",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.smoothScrolling": true,
    "terminal.integrated.fontFamily": "'JetBrainsMono Nerd Font', monospace",
    "terminal.integrated.fontSize": 13,
    "workbench.colorCustomizations": {
        "editorCursor.foreground": "#00d9ff",
        "terminalCursor.foreground": "#00d9ff",
        "editor.selectionBackground": "#1a4a6a",
        "editor.selectionHighlightBackground": "#1a4a6a44",
        "activityBar.background": "#0a0e14",
        "sideBar.background": "#0d1218",
        "editor.background": "#0a0e14",
        "statusBar.background": "#00aaff",
        "statusBar.foreground": "#0a0e14"
    }
}
