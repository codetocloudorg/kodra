# Kodra Ghostty Configuration
# https://ghostty.org/docs/config

# Font
font-family = "JetBrainsMono Nerd Font"
font-size = 13
font-thicken = true
adjust-cell-height = 10%

# Window
window-padding-x = 16
window-padding-y = 14
background-opacity = 0.98
window-decoration = true
window-theme = ghostty
confirm-close-surface = false
macos-titlebar-style = tabs

# Cursor
cursor-style = bar
cursor-style-blink = true
shell-integration = zsh

# Scrollback
scrollback-limit = 10000

# Mouse
mouse-hide-while-typing = true
copy-on-select = clipboard

# Keybindings (sensible defaults)
keybind = ctrl+shift+c=copy_to_clipboard
keybind = ctrl+shift+v=paste_from_clipboard
keybind = ctrl+shift+n=new_window
keybind = ctrl+shift+t=new_tab
keybind = ctrl+shift+w=close_surface
keybind = ctrl+plus=increase_font_size:1
keybind = ctrl+minus=decrease_font_size:1
keybind = ctrl+zero=reset_font_size

# Performance
gtk-single-instance = true
async-backend = epoll

# Mouse
mouse-scroll-multiplier = 0.95

# Split pane resize (Super+Ctrl+Shift+Arrow)
keybind = super+ctrl+shift+up=resize_split:up,10
keybind = super+ctrl+shift+down=resize_split:down,10
keybind = super+ctrl+shift+left=resize_split:left,10
keybind = super+ctrl+shift+right=resize_split:right,10

# Unbind keys that conflict with tmux (Ctrl+Space is tmux prefix)
keybind = ctrl+space=unbind

# Import theme (set by kodra theme command)
config-file = ~/.config/ghostty/theme
