# Kodra Input Configuration
# Tab-cycle completion and enhanced readline behavior

# Tab-cycle through completions (like fish/zsh)
TAB: menu-complete
"\e[Z": menu-complete-backward

# Show common prefix before cycling
set menu-complete-display-prefix on

# Show all completions at once if ambiguous
set show-all-if-ambiguous on
set show-all-if-unmodified on

# Color completions by type (files, dirs, etc.)
set colored-stats on
set colored-completion-prefix on

# Case-insensitive matching
set completion-ignore-case on

# Treat hyphens and underscores equally
set completion-map-case on

# Don't ring the bell
set bell-style none

# Append / to directories
set mark-directories on
set mark-symlinked-directories on

# Show file types with completion
set visible-stats on

# History search with up/down arrows
"\e[A": history-search-backward
"\e[B": history-search-forward

# Ctrl+Left/Right for word navigation
"\e[1;5D": backward-word
"\e[1;5C": forward-word

# Better word deletion
"\C-w": backward-kill-word

# Expand history on space
$if Bash
  Space: magic-space
$endif
